<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:singleLineTitle="false"
        app:title="@string/maps">

        <SwitchPreferenceCompat
            android:summary="@string/on_import"
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_low_resolution_maps"
            app:singleLineTitle="false"
            app:title="@string/reduce_photo_resolution" />

        <SwitchPreferenceCompat
            android:summary="@string/on_import"
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_low_resolution_pdf_maps"
            app:singleLineTitle="false"
            app:title="@string/reduce_pdf_resolution" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_show_map_previews"
            app:singleLineTitle="false"
            app:title="@string/pref_show_map_previews_title" />

        <SwitchPreferenceCompat
            android:summary="@string/pref_keep_map_facing_up_summary"
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_keep_map_facing_up"
            app:singleLineTitle="false"
            app:title="@string/pref_keep_map_facing_up_title" />

        <SwitchPreferenceCompat
            android:title="@string/pref_navigation_lock_screen_when_open_title"
            app:defaultValue="false"
            app:iconSpaceReserved="false"
            app:key="@string/pref_photo_maps_keep_unlocked"
            app:singleLineTitle="false" />

    </PreferenceCategory>

    <!--Layers-->
    <PreferenceCategory>
        <Preference
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            app:title="@string/layers" />
    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:singleLineTitle="false"
        app:title="@string/contours">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:iconSpaceReserved="false"
            app:key="@string/pref_photo_maps_contour_layer_enabled"
            app:singleLineTitle="false"
            app:title="@string/visible" />

        <SeekBarPreference
            android:defaultValue="50"
            android:dependency="@string/pref_photo_maps_contour_layer_enabled"
            android:max="100"
            app:iconSpaceReserved="false"
            app:key="@string/pref_photo_maps_contour_layer_opacity"
            app:min="0"
            app:seekBarIncrement="1"
            app:showSeekBarValue="true"
            app:singleLineTitle="false"
            app:title="@string/opacity" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:dependency="@string/pref_photo_maps_contour_layer_enabled"
            app:iconSpaceReserved="false"
            app:key="@string/pref_photo_maps_contour_layer_show_labels"
            app:singleLineTitle="false"
            app:title="@string/show_labels" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:dependency="@string/pref_photo_maps_contour_layer_enabled"
            app:iconSpaceReserved="false"
            app:key="@string/pref_photo_maps_contour_layer_color_with_elevation"
            app:singleLineTitle="false"
            app:title="@string/color_with_elevation" />

    </PreferenceCategory>
</PreferenceScreen>