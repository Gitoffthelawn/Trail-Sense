<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kylecorry.andromeda.views.toolbar.Toolbar
        android:id="@+id/stride_length_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showSubtitle="false"
        tools:title="-" />

    <TextView
        android:id="@+id/stride_length_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        tools:text="Test" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/stride_length_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/reset_stride_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:alpha="0.86"
            android:background="@android:color/transparent"
            android:contentDescription="@string/reset"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_baseline_refresh_24"
            app:tint="?android:textColorSecondary"
            tools:visibility="visible" />

    </LinearLayout>


</LinearLayout>